<Window x:Class="Bondarenko_LibraryDataBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bondarenko_LibraryDataBase"
        mc:Ignorable="d"
        Title="LibraryDataBase" Height="600" Width="1000"
        Icon="./Content/icon.png"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">

    <!--Общий грид-->
    <Grid Background="#1E2A38">

        <!--Разбиение на строки и колонки-->
        <Grid.RowDefinitions>

            <RowDefinition Height="75"/>
            <RowDefinition/>
            <RowDefinition Height="70"/>

        </Grid.RowDefinitions>

        <!--Шапка страницы-->
        <Border BorderThickness="0,0,0,5"
                BorderBrush="Gray"
                Grid.Row="0" Grid.ColumnSpan="2">

            <StackPanel Orientation="Horizontal">

                <Label Content="Бибилиотека им. Генды"
                       FontSize="36"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="5,5,0,5"
                       FontWeight="SemiBold"
                       Foreground="White"/>

                <Image Source="./Content/icon.png"
                       Width="60"
                       Height="60"
                       Margin="5,5,0,5"/>

            </StackPanel>



        </Border>

        <!--Логин/пароль-->
        <Grid Background="#38495E"
                Grid.Row="1" Grid.ColumnSpan="2">

            <!--Форма логина и пароля-->
            <Grid Grid.Row="0">

                <StackPanel Orientation="Vertical">

                    <StackPanel Orientation="Horizontal"
                                Margin="30">

                        <Label Content="Login      "
                               Grid.Column="0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"
                               FontSize="22"
                               Foreground="White"/>

                        <TextBox Grid.Row="0"
                                 Grid.Column="1"
                                 Width="500"
                                 Height="70"
                                 HorizontalAlignment="Left"
                                 Margin="20,0,0,0"
                                 FontSize="30"
                                 FontWeight="Light"
                                 x:Name="LoginBox"/>

                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="30">

                        <Label Content="Password"
                               Grid.Column="0"
                               Grid.Row="1"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"
                               FontSize="22"
                               Foreground="White"/>

                        <PasswordBox Grid.Row="1"
                                     Grid.Column="1"
                                     Width="500"
                                     Height="70"
                                     HorizontalAlignment="Left"
                                     Margin="20,0,0,0"
                                     FontSize="30"
                                     FontWeight="Light"
                                     PasswordChar="*"
                                     MaxLength="10"
                                     x:Name="PassBox"/>

                    </StackPanel>

                </StackPanel>

            </Grid>

        </Grid>

        <!--Кнопки-->
        <Border Grid.Row="2"
                BorderThickness="0,2,0,0"
                BorderBrush="Gray">

            <StackPanel Orientation="Horizontal">
                <Button Width="200"
                        Height="50"
                        Margin="10"
                        Content="Регситрация"
                        FontSize="25" Click="Reg_Button"/>

                <Button Width="200"
                        Height="50"
                        Margin="10"
                        Content="Забыл пароль"
                        FontSize="25"
                        Click="Forgot_Button"/>

                <Button Width="200"
                        Height="50"
                        Margin="10"
                        Content="Вход"
                        FontSize="25"
                        Click="Enter_Button"
                        x:Name="EnterButton"/>
            </StackPanel>

        </Border>

    </Grid>
    <!--Общий грид-->

</Window>
<!--Окно-->
